<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <ImageView android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close_black_36dp"
        android:id="@+id/imageButtonExit"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_skip_next_black_36dp"
        android:id="@+id/imageButtonNext"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonExit"
        android:layout_toStartOf="@+id/imageButtonExit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pause_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonNext"
        android:layout_toStartOf="@+id/imageButtonNext"
        android:id="@+id/imageButtonStop"
        android:background="#fff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_skip_previous_black_36dp"
        android:id="@+id/imageButtonPrev"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonStop"
        android:layout_toStartOf="@+id/imageButtonStop"
        android:background="#fff" />

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Notification Title"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonPrev"
        android:layout_toStartOf="@+id/imageButtonPrev"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Notification Text"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/imageButtonPrev"
        android:layout_toStartOf="@+id/imageButtonPrev"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

</RelativeLayout>